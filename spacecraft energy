clc
clear all
close all
%% Solar panel energy generation
solar_irradiance = 1361;    % W/m^2
panel_area = 2;             % m^2
panel_efficiency = 0.30;    % 30%
time = 1;                   % 1 hour
% Energy generated from solar panel (Wh)
energy_generated = solar_irradiance * panel_area * ...
                   panel_efficiency * time;
%% Energy consumption by subsystems (Wh)
communication = 20 * time;
navigation    = 10 * time;
payload       = 30 * time;
thermal       = 15 * time;
computer      = 10 * time;
total_energy_used = communication + navigation + ...
                    payload + thermal + computer;
%% Remaining energy
remaining_energy = energy_generated - total_energy_used;
%% Sending status message to ground station
disp('--- SPACECRAFT ENERGY STATUS MESSAGE ---');
disp(['Energy Generated by Solar Panel : ', num2str(energy_generated), ' Wh']);
disp(['Energy Used by Communication    : ', num2str(communication), ' Wh']);
disp(['Energy Used by Navigation       : ', num2str(navigation), ' Wh']);
disp(['Energy Used by Payload          : ', num2str(payload), ' Wh']);
disp(['Energy Used by Thermal Control  : ', num2str(thermal), ' Wh']);
disp(['Energy Used by Computer         : ', num2str(computer), ' Wh']);
disp(['Total Energy Used               : ', num2str(total_energy_used), ' Wh']);
disp(['Remaining Energy                : ', num2str(remaining_energy), ' Wh']);
disp('Status Message Sent to Ground Station Successfully');
